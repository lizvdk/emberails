<div class="row">

  <div class="small-3 columns">
    <h3>Goats</h3>
    <ul class="no-bullet">
      <li>{{#link-to "goats.new" class="button tiny radius"}}Add a Goat{{/link-to}}</li>
      {{#each }}
        <li>
          {{#link-to "goats.show" this }}
            {{name}}
          {{/link-to}}
        </li>
      {{/each}}
    </ul>
  </div>

  <div class="small-9 columns">
    {{outlet}}
  </div>

</div>
