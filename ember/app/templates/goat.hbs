{{#if isEditing}}
  {{partial "goat/edit"}}
  <button class="tiny radius" {{action "doneEditing"}}>Done</button>
{{else}}
  <button class="tiny radius" {{action "edit"}}>Edit</button>
{{/if}}

<div class="row">
  <h1>{{name}}</h1>
</div>

<div class="row">
  <b>Bio:</b> {{bio}}
</div>

<div class="row">
  <b>Favorite Snack:</b> {{snack}}
</div>
